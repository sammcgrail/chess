{
  "name": "chess",
  "version": "0.2.80",
  "description": "6D Chess - multiverse chess with timeline branching",
  "main": "dist/bundle.js",
  "scripts": {
    "build": "node build.js",
    "watch": "node build.js --watch",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit && echo 'Types OK!'",
    "test": "npm run test:unit && npm run test:integration && npm run test:headless",
    "test:unit": "npx ts-node test/unit.test.ts",
    "test:integration": "npx ts-node test/integration.test.ts",
    "test:headless": "npx ts-node test/headless-runner.ts",
    "test:quick": "npx ts-node test/headless-runner.ts 5 50",
    "test:stress": "npx ts-node test/headless-runner.ts 50 200"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nicklaude/chess.git"
  },
  "keywords": [
    "chess",
    "3d",
    "three.js",
    "multiverse"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/nicklaude/chess/issues"
  },
  "homepage": "https://github.com/nicklaude/chess#readme",
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/three": "^0.182.0",
    "chess.js": "^0.10.3",
    "esbuild": "^0.27.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
